<div class="row">
 <div class="col-xs-12">
  <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
   <div class="form-group">
    <div class="control-label col-sm-4">
     <%= f.label :username %>
    </div>
    <div class="col-sm-4">
     <%= f.text_field :username, class: "form-control", placeholder: "User name", autofocus: true %>
    </div>
   </div>
   <div class="form-group">
    <div class="control-label col-sm-4">
     <%= f.label :email %>
    </div>
    <div class="col-sm-4">
     <%= f.text_field :email, class: "form-control", placeholder: "User email" %>
    </div>
   </div>
   <div class="form-group">
    <div class="control-label col-sm-4">
     <%= f.label :password %>
    </div>
    <div class="col-sm-4">
     <%= f.text_field :password, class: "form-control", placeholder: "User password" %>
    </div>
   </div>
    <div class="form-group">
     <div class="col-sm-offset-4 col-sm-8">
      <%= f.submit class: 'btn btn-primary btn-large' %>
     </div>
    </div>

  <% end %>
  <div class="col-sm-offset-4 col-sm-8">
   <%= link_to 'Cancel Request and back to Articles Listing', articles_path %>
  </div>
 </div>
</div>
